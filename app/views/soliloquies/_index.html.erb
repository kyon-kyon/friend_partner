
<div class="solindex-background">
    <table class="text-center table">
      <thead>
        <tr>
          <th class="text-center">投稿者写真</th>
          <th class="text-center">つぶやきタイトル</th>
          <th class="text-center">稼働中/退会済み</th>
          <th class="text-center">つぶやき詳細へ</th>
          <th class="text-center">何を思ったか</th>
          <th class="text-center">ユーザー名</th>
        </tr>
      </thead>


        <% soliloquies.each do |soliloquy| %>
          <% if soliloquy.user.is_deleted == "Invaild" %>
          <% else %>
            <tbody>
              <tr>
                <td>
                  <%= link_to user_path(soliloquy.user) do %>
                  <%= attachment_image_tag soliloquy.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size: "100x100" %>
                  <% end %>
                </td>
                <td>
                  <%= link_to soliloquy_path(soliloquy) do %>
                  <%= soliloquy.title %></td>
                  <% end %>
                </td>
                <td>
                  <% if soliloquy.user.is_deleted == "Availble" %>
                  <%= "稼働中" %>
                  <% else %>
                  <%= "退会済み" %>
                  <% end %>
                </td>
                <td class="btn btn-default"><%= link_to "詳細", soliloquy_path(soliloquy) %></td>
                <td><%= soliloquy.how_feel %></td>
                <td><%= soliloquy.user.name %></td>
              </tr>
          <% end %>
        <% end %>
  　</table>
</div>


