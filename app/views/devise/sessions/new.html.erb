<% provide(:title, "ログイン") %>
<div class="container">
  <div class="row">
    </br>
    </br>
    </br>
    </br>

  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3 log-in">
      <%= form_with model: @user, url: session_path(resource_name), local: true do |f| %>
        <table class="table">
          <tr>
            <td>
              <h4 class="text-center">ログイン</h4>
            </td>
          </tr>

          <tr>
            <td class="table-noborder" colspan="2"><%= f.email_field :email, :placeholder => "email", autofocus: true, :size=>"50", class: "form-control input-lg" %></td>
          </tr>

          <tr>
            <td class="table-noborder" colspan="2"><%= f.password_field :password, :placeholder => "password", autocomplete: "current-password", :size=>"50", class: "form-control input-lg" %></td>
          </tr>


          <tr>
            <td class="table-noborder text-center"><%= link_to "パスワードをお忘れですか？", new_password_path(resource_name), class: "btn-link" %></td>
          </tr>


          <tr>
            <td class="table-noborder text-center"><%= f.submit "ログイン", class: "btn btn-primary" %></td>
          </tr>

        </table>
      <% end %>
    </div>
  </div>


    <div class="row text-center">
      <h4 class="text-center">登録がお済みでない方</h4>
      <li><%= link_to "新規登録", new_user_registration_path, class:"btn btn-success center" %></li>
      <br>
      <li><%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, method: :post, class:"btn btn-warning center text-center" %></li>
      <br>
    </div>
<br>
