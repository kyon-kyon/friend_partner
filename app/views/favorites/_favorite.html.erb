              <% if soliloquy.favorited_by?(current_user) %>
							<li>
								<%= link_to soliloquy_favorites_path(soliloquy), method: :delete, remote: true do %>
									<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
									<%= soliloquy.favorites.count %>いいね解除
								<% end %>
							</li>
							<% else %>
							<li>
								<%= link_to soliloquy_favorites_path(soliloquy), method: :post, remote: true do %>
									<i class="fa fa-heart-o" aria-hidden="true"></i>
									<%= soliloquy.favorites.count %>いいね
								<% end %>
							</li>
							<% end %>
							</li>