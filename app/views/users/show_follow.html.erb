<div class="background-show" height="1500px" width="1500px">
  <div class="row">
      <section class="text-center">
          <%= attachment_image_tag(@user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size: "100×100") %>
          <h2><%= @user.name %></h2>
      </section>
      <section class="">
        <% if @users.any? %>
            <table class="text-center table center-index">
              <thead>
                <tr>
                  <th class="text-center">顔写真</th>
                  <th class="text-center">名前</th>
                  <th class="text-center">フォロー数</th>
                  <th class="text-center">フォワー数</th>
                </tr>
              </thead>
              <% @users.each do |user| %>
                <tbody>
                  <tr>
                    <td width="120">
                      <%= link_to user_path(user) do %>
                        <%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size: "100x100") %>
                      <% end %>
                    </td>
                    <td>
                      <%= link_to user_path(user) do %>
                        <%= user.name %>
                      <% end %>
                    </td>
                    <td>
                      <%= link_to following_user_path(user) do %>
                        <%= user.following.count %>人
                      <% end %>
                    </td>
                    <td>
                      <%= link_to following_user_path(user) do %>
                        <%= user.followers.count %>人
                      <% end %>
                    </td>
                  </tr>
                </tbody>
              <% end %>
            </table>
        <% end %>
      </section>
        <%= will_paginate %>
  </div>
</div>